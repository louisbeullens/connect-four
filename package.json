{
  "version": "1.0.0",
  "description": "connect4 Library",
  "name": "connect-four",
  "main": "dist/client.js",
  "types": "dist/client.d.ts",
  "bin": {
    "connect4-server": "dist/bin/connect4-server.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
