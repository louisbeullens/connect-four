  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "^18.14.1",
    "@types/uuid": "^9.0.1",
    "@types/websocket": "^1.0.5",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "madge": "^6.0.0",
    "prettier": "^2.8.4",
    "typedoc": "^0.23.26",
    "typescript": "^4.9.5"
