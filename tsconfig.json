{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/",
    "sourceMap": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*"
  ]
}